{
	"name": "mark-gutenberger-site",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"author": {
		"name": "Mark Gutenberger",
		"email": "Mark-Gutenberger@outlook.com"
	},
	"scripts": {
		"install": "bundle install",
		"lint": "eslint .",
		"test": "echo \"Warn: no test specified\" && exit 0",
		"pretty": "prettier --write .",
		"start": "yarn build && bundle exec jekyll serve",
		"less": "lessc ./public/less/main.less > ./public/css/main.css",
		"mincss": "uglifycss ./public/css/main.css > ./public/css/main.min.css",
		"build": "yarn less && yarn mincss && bundle exec jekyll build",
		"clean": "bundle exec jekyll clean && rm -rf -f ./public/css",
		"dev": "bundle exec jekyll serve --watch",
		"serve": "yarn start",
		"deploy": "yarn build && yarn test && yarn serve"
	},
	"dependencies": {},
	"devDependencies": {
		"eslint": "^8.7.0",
		"eslint-plugin-prettier": "^4.0.0",
		"less": "^4.1.2",
		"prettier": "^2.2.1",
		"uglifycss": "^0.0.29"
	}
}
